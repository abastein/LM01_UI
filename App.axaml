<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LM01_UI.App"
             xmlns:converters="clr-namespace:LM01_UI"
             xmlns:vm="clr-namespace:LM01_UI.ViewModels"
             xmlns:views="clr-namespace:LM01_UI.Views">

	<Application.Styles>
		<FluentTheme/>
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
		<Style Selector="Button">
			<Setter Property="Background" Value="#FF4CAF50"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Padding" Value="12,6"/>
		</Style>
	</Application.Styles>

	<Application.Resources>
		<!-- tvoji converterji -->
		<converters:BoolToBrushConverter x:Key="BoolToBrushConverter" TrueBrush="Green" FalseBrush="Red" />
		<converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
		<converters:DegreesToPulsesConverter x:Key="DegreesToPulsesConverter"/>
		<converters:RpmToPulsesPerSecondConverter x:Key="RpmToPulsesPerSecondConverter"/>
		<converters:DirectionToSymbolConverter x:Key="DirectionToSymbolConverter"/>

		<!-- ********  KLJUČNO: preglasi selection overlay (Fluent + Simple)  ******** -->

		<!-- FluentTheme – izbrano (focused) in ne-fokusirano -->
		<SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="#007435"/>
		<SolidColorBrush x:Key="SystemControlHighlightListAltLowBrush" Color="#007435"/>

		<!-- SimpleTheme/Skupni ključi -->
		<SolidColorBrush x:Key="ThemeSelectionBrush" Color="#007435"/>
		<SolidColorBrush x:Key="ThemeUnfocusedSelectionBrush" Color="#007435"/>
		<SolidColorBrush x:Key="ThemeSelectionForegroundBrush" Color="White"/>
		<SolidColorBrush x:Key="ThemeUnfocusedSelectionForegroundBrush" Color="White"/>

		<!-- DataGrid-specifični ključi (Avalonia 11.3.x) -->
		<SolidColorBrush x:Key="DataGridRowSelectedBackground" Color="#007435"/>
		<SolidColorBrush x:Key="DataGridRowSelectedInactiveBackground" Color="#007435"/>
		<SolidColorBrush x:Key="DataGridCellSelectedBackground" Color="#007435"/>
		<SolidColorBrush x:Key="DataGridCellSelectedInactiveBackground" Color="#007435"/>

		<SolidColorBrush x:Key="DataGridRowSelectedForeground" Color="White"/>
		<SolidColorBrush x:Key="DataGridRowSelectedInactiveForeground" Color="White"/>
		<SolidColorBrush x:Key="DataGridCellSelectedForeground" Color="White"/>
		<SolidColorBrush x:Key="DataGridCellSelectedInactiveForeground" Color="White"/>
	</Application.Resources>

	<Application.DataTemplates>
		<DataTemplate DataType="{x:Type vm:WelcomeViewModel}">
			<views:WelcomeView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:MainPageViewModel}">
			<views:MainPageView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:AdminPageViewModel}">
			<views:AdminPageView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:PlcTestViewModel}">
			<views:PlcTestView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:ParameterEditorViewModel}">
			<views:ParameterEditorView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:UITestViewModel}">
			<views:UITestView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:RecipeListViewModel}">
			<views:RecipeListView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type vm:RecipeEditorViewModel}">
			<views:RecipeEditorView/>
		</DataTemplate>
	</Application.DataTemplates>
</Application>
