<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LM01_UI.Views.RecipeEditorView"
             xmlns:vm="clr-namespace:LM01_UI.ViewModels"
             x:DataType="vm:RecipeEditorViewModel">
	<Grid RowDefinitions="Auto,Auto,*,Auto" ColumnDefinitions="*,*" Gap="10" Margin="10">
		<TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Urejevalnik Recepture" FontSize="20" FontWeight="Bold"/>

		<StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="10">
			<TextBlock Text="Ime:" VerticalAlignment="Center"/>
			<TextBox Text="{Binding CurrentRecipe.Name}" Width="200"/>
			<TextBlock Text="Opis:" VerticalAlignment="Center"/>
			<TextBox Text="{Binding CurrentRecipe.Description}" Width="400"/>
		</StackPanel>

		<Grid Grid.Row="2" Grid.Column="0">
			<Grid RowDefinitions="Auto,*,Auto" Gap="5">
				<TextBlock Grid.Row="0" Text="Koraki"/>
				<StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="5">
					<Button Content="Dodaj" Command="{Binding AddNewStepCommand}"/>
					<Button Content="Uredi" Command="{Binding EditStepCommand}"/>
					<Button Content="Izbriši" Command="{Binding DeleteStepCommand}"/>
					<Button Content="Gor" Command="{Binding MoveStepUpCommand}"/>
					<Button Content="Dol" Command="{Binding MoveStepDownCommand}"/>
				</StackPanel>
				<DataGrid Grid.Row="1" ItemsSource="{Binding Steps}" SelectedItem="{Binding SelectedStep}" AutoGenerateColumns="False" IsReadOnly="True">
					<DataGrid.Columns>
						<DataGridTextColumn Header="Št." Binding="{Binding StepNumber}" Width="50"/>
						<DataGridTextColumn Header="Funkcija" Binding="{Binding Function}" Width="*"/>
						<DataGridTextColumn Header="Hitrost" Binding="{Binding SpeedRPM}" Width="Auto"/>
						<DataGridTextColumn Header="Smer" Binding="{Binding Direction}" Width="Auto"/>
					</DataGrid.Columns>
				</DataGrid>
			</Grid>
		</Grid>

		<ContentControl Grid.Row="2" Grid.Column="1" Content="{Binding CurrentStepEditor}"/>

		<StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
			<Button Content="Shrani Recepturo" Command="{Binding SaveRecipeCommand}" Background="ForestGreen"/>
			<Button Content="Prekliči" Command="{Binding CancelCommand}" Background="IndianRed"/>
		</StackPanel>
	</Grid>
</UserControl>