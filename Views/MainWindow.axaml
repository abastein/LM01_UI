<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LM01_UI.ViewModels"
        xmlns:views="clr-namespace:LM01_UI.Views"
        x:Class="LM01_UI.Views.MainWindow"
        Title="LM01 PLC Control"
        SystemDecorations="None"
        WindowState="FullScreen"
		Width="1920"
		Height="1080"
        Background="white"
        x:DataType="vm:MainWindowViewModel">

	<Grid>

		<Grid>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="330"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="240"/>
				<ColumnDefinition Width="50"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="20"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="20"/>
			</Grid.RowDefinitions>

			<StackPanel DockPanel.Dock="Top" Grid.Column="0" Grid.Row="1"
			Orientation="Horizontal"
			Spacing="20"
			Margin="20"
			HorizontalAlignment="Left">

				<Image Source="avares://LM01_UI/Assets/Images/LogoLM.png"
                       Width="240"
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>

			</StackPanel>


				<Border Grid.Column="1"
						Grid.ColumnSpan="2"
							Grid.Row="2"
							Background="LightGreen"
							CornerRadius="50,15,15,15"
							BorderBrush="Gray"
							BorderThickness="3"
										/>

				<ContentControl Content="{Binding CurrentPageViewModel}"
								HorizontalContentAlignment="Stretch"
								VerticalContentAlignment="Stretch"/>

		
		</Grid>


		<!-- Left menu -->
		<Grid>

			<Grid.ColumnDefinitions>				
				<ColumnDefinition Width="300"/>
				<ColumnDefinition Width="*"/>				
			</Grid.ColumnDefinitions>
			
			<Grid.RowDefinitions>
				<RowDefinition Height="240"/>
				<RowDefinition Height="200"/>
				<RowDefinition Height="*"/>		
			</Grid.RowDefinitions>

			<Border Grid.Column="0"
					Grid.Row="1"
					Grid.RowSpan="2"
					Background="DarkGreen"
					CornerRadius="0,50,0,0"
					BorderBrush="DarkGreen"
					BorderThickness="3"
					/>

			<StackPanel Grid.Column="0" Grid.Row="1">

				<Button Content="Programi"
						Command=""
						Width="255"
						Height="100"
						FontSize="25"
						FontWeight="Bold"
						Background="White"
						Foreground="Black"
						BorderBrush="DarkGray"
						BorderThickness="3"
						CornerRadius="10,50,10,10"
						Margin="10"/>

				<Button Content="Uredi programe"
						Command=""
						Width="255"
						Height="100"
						FontSize="25"
						FontWeight="Bold"
						Background="White"
						Foreground="Black"
						BorderBrush="DarkGray"
						BorderThickness="3"
						CornerRadius="10,50,10,10"
						Margin="10"/>

				<Button Content="Ročni način"
						Command=""
						Width="255"
						Height="100"
						FontSize="25"
						FontWeight="Bold"
						Background="White"
						Foreground="Black"
						BorderBrush="DarkGray"
						BorderThickness="3"
						CornerRadius="10,50,10,10"
						Margin="10"/>

				<Button Content="Izhod"
						Command="{Binding ExitApplicationCommand}"
						Width="255"
						Height="100"
						FontSize="25"
						FontWeight="Bold"
						Background="White"
						Foreground="Black"
						BorderBrush="DarkGray"
						BorderThickness="3"
						CornerRadius="10,50,10,10"
						Margin="10"/>

			</StackPanel>

				
			</Grid>

	</Grid>
</Window>