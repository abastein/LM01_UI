<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LM01_UI.ViewModels"
        xmlns:views="clr-namespace:LM01_UI.Views"
        x:Class="LM01_UI.Views.MainWindow"
        Title="LM01 PLC Control"
        SystemDecorations="None"
        WindowState="FullScreen"
		Width="1920"
		Height="1080"
        Background="white"
        x:DataType="vm:MainWindowViewModel">

	<Grid>

		<Grid>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="330"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="340"/>
				<ColumnDefinition Width="50"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="20"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="20"/>
			</Grid.RowDefinitions>

				<StackPanel DockPanel.Dock="Top" Grid.Column="0" Grid.Row="1"
							Orientation="Horizontal"
							Spacing="20"
							Margin="20"
							HorizontalAlignment="Left">

						<Image Source="avares://LM01_UI/Assets/Images/LogoLM.png"
							Width="240"
							Stretch="Uniform"
							VerticalAlignment="Center"/>
				</StackPanel>
			
			<Border Grid.Column="1" Grid.ColumnSpan="1"
					Grid.Row="1" Grid.RowSpan="1"
					Background="#007435"
					CornerRadius="25,0,25,50"
					BorderBrush="DarkGreen"
					BorderThickness="3"/>

			<Grid Grid.Column="1" Grid.Row="1" Margin="40" HorizontalAlignment="Left">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="MARMORIRANJE STL 600"
                           FontSize="50"
                           FontWeight="SemiBold"
						  
                           Foreground="Lightgray"
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="8" Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>

				<StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="15">
					<TextBlock Text="PLC Status:"
									FontSize="20"
									Foreground="Black"
									VerticalAlignment="Center"/>
					<Border Width="96" Height="24"
									CornerRadius="12"
									Background="{Binding IsPlcConnected, Converter={StaticResource BoolToBrushConverter}}"
									BorderBrush="Black"
									BorderThickness="1"
									VerticalAlignment="Center"/>
				</StackPanel>

				<TextBlock Grid.Row="2"
								Text="{Binding PlcStatusText}"
								FontSize="20"
								Foreground="Black"
								VerticalAlignment="Center"/>
			</Grid>
			
					<Grid Grid.Column="2" Grid.Row="1"
							Margin="40"
							HorizontalAlignment="Left">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<Image  Source="avares://LM01_UI/Assets/Images/Logo3B.png"
								Grid.Row="0"
								Width="340"
								Stretch="Uniform"
								VerticalAlignment="Center"/>

						<TextBlock Grid.Row="1"
								Text="STL600"
								FontSize="30"
								Foreground="Black"
								VerticalAlignment="Center"/>

						<TextBlock Grid.Row="2"
								Text="ver: 1.2C Sep 2025"
								FontSize="20"
								Foreground="Black"
								VerticalAlignment="Center"/>

					</Grid>
			
				<ContentControl Content="{Binding CurrentPageViewModel}"
								Grid.Column="1"
								Grid.ColumnSpan="2"
								Grid.Row="2"
								CornerRadius="50,15,50,15"
								HorizontalContentAlignment="Stretch"
								VerticalContentAlignment="Stretch"/>
		
		</Grid>


		<!-- Left menu -->
		<Grid>

			<Grid.ColumnDefinitions>				
				<ColumnDefinition Width="300"/>
				<ColumnDefinition Width="*"/>				
			</Grid.ColumnDefinitions>
			
			<Grid.RowDefinitions>
				<RowDefinition Height="240"/>
				<RowDefinition Height="200"/>
				<RowDefinition Height="*"/>		
			</Grid.RowDefinitions>

			<Border Grid.Column="0"
					Grid.Row="1"
					Grid.RowSpan="2"
					Background="#007435"
					CornerRadius="0,50,0,0"
					BorderBrush="DarkGreen"
					BorderThickness="3"
					/>

			<Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Margin="0,30,0,0">

				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<StackPanel Grid.Row="0">

			<Button Content="Programi"
							Command="{Binding NavigateProgramiCommand}"
							Width="255"
							Height="100"
							FontSize="25"
							FontWeight="Bold"
							Background="White"
							Foreground="Black"
							BorderBrush="DarkGray"
							BorderThickness="3"
							CornerRadius="10,50,10,10"
							Margin="20,10,10,20"/>

			<Button Content="Uredi programe"
							Command="{Binding NavigateAdminCommand}"
							Width="255"
							Height="100"
							FontSize="25"
							FontWeight="Bold"
							Background="White"
							Foreground="Black"
							BorderBrush="DarkGray"
							BorderThickness="3"
							CornerRadius="10,50,10,10"
							Margin="20,10,10,20"/>

			<Button Content="Ročni način"
							Command="{Binding NavigateManualCommand}"
							Width="255"
							Height="100"
							FontSize="25"
							FontWeight="Bold"
							Background="White"
							Foreground="Black"
							BorderBrush="DarkGray"
							BorderThickness="3"
							CornerRadius="10,50,10,10"
							Margin="20,10,10,20"/>
					
			<Button Content="Pranje"
							Command="{Binding NavigatePranjeCommand}"
							Width="255"
							Height="100"
							FontSize="25"
							FontWeight="Bold"
							Background="White"
							Foreground="Black"
							BorderBrush="DarkGray"
							BorderThickness="3"
							CornerRadius="10,50,10,20"
							Margin="20"/>

				</StackPanel>

				<Button Content="Izhod"
								Command="{Binding ExitApplicationCommand}"
								Width="255"
								Height="100"
								FontSize="25"
								FontWeight="Bold"
								Background="Salmon"
								Foreground="Black"
								BorderBrush="DarkGray"
								BorderThickness="3"
								CornerRadius="10,50,10,10"
								Margin="20,10,10,30"
								Grid.Row="1"
								VerticalAlignment="Bottom"/>

			</Grid>				
		</Grid>
	</Grid>
</Window>