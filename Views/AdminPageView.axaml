<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LM01_UI.Views.AdminPageView"
             xmlns:vm="clr-namespace:LM01_UI.ViewModels"
             xmlns:views="clr-namespace:LM01_UI.Views"
             x:DataType="vm:AdminPageViewModel"
             Background="#FF202530">
	<DockPanel>
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10" HorizontalAlignment="Left">
			<Button Content="Seznam Receptur" Command="{Binding NavigateToRecipeListCommand}" />
			<Button Content="PLC Test" Command="{Binding NavigateToPlcTestCommand}" />
			<Button Content="Uredi Parametre" Command="{Binding NavigateToParameterEditorCommand}" />
			<Button Content="Nazaj" Command="{Binding NavigateBackCommand}" Margin="20,0,0,0"/>
		</StackPanel>

		<ContentControl Content="{Binding CurrentAdminSubPageViewModel}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch">
			<ContentControl.DataTemplates>
				<DataTemplate DataType="{x:Type vm:RecipeListViewModel}">
					<views:RecipeListView/>
				</DataTemplate>

				<DataTemplate DataType="{x:Type vm:PlcTestViewModel}">
					<views:PlcTestView/>
				</DataTemplate>
				<DataTemplate DataType="{x:Type vm:ParameterEditorViewModel}">
					<views:ParameterEditorView/>
				</DataTemplate>
			</ContentControl.DataTemplates>
		</ContentControl>
	</DockPanel>
</UserControl>