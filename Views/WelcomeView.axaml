<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 d:DesignWidth="800" 
			 d:DesignHeight="600"
             x:Class="LM01_UI.Views.WelcomeView" 
			 x:DataType="vm:WelcomeViewModel"      
			 Background="White"
			 xmlns:vm="clr-namespace:LM01_UI.ViewModels"     
			 xmlns:converters="clr-namespace:LM01_UI">
	
	
	<StackPanel HorizontalAlignment="Center" 
				VerticalAlignment="Center" 
				Spacing="30">
	
		<StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center">
			<TextBlock Text="PLC Status:"
                       FontSize="20"
                       Foreground="Black"
                       VerticalAlignment="Center"/>

			<Border Width="24" Height="24"
                    CornerRadius="12"
                    Background="{Binding IsPlcConnected, Converter={StaticResource BoolToBrushConverter}}" BorderBrush="Black"
                    BorderThickness="1"
                    VerticalAlignment="Center"/>

			<TextBlock Text="{Binding PlcStatusText}"
                       FontSize="20"
                       Foreground="Black"
                       VerticalAlignment="Center"/>
		</StackPanel>
		
	</StackPanel>
</UserControl>