<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LM01_UI.Views.StepEditorView"
             xmlns:vm="clr-namespace:LM01_UI.ViewModels"
             x:DataType="vm:StepEditorViewModel"
             x:CompileBindings="True">

	<Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="4">
		<StackPanel Spacing="10">
			<TextBlock Text="Urejevalnik Koraka" FontWeight="Bold"/>

			<TextBlock Text="Funkcija:"/>
			<ComboBox ItemsSource="{Binding AvailableFunctions}"
                      SelectedItem="{Binding SelectedFunction}"
                      DisplayMemberBinding="{Binding Name}"/>

			<StackPanel Name="SpeedPanel" Spacing="5">
				<TextBlock Text="Hitrost (RPM):"/>
				<NumericUpDown Value="{Binding SpeedRPM, Mode=TwoWay}" Minimum="0"/>
			</StackPanel>

			<StackPanel Name="DirectionPanel" Spacing="5">
				<TextBlock Text="Smer:"/>
				<ComboBox SelectedItem="{Binding Direction}">
					<ComboBox.Items>
						<vm:EDirection>CW</vm:EDirection>
						<vm:EDirection>CCW</vm:EDirection>
					</ComboBox.Items>
				</ComboBox>
			</StackPanel>

			<StackPanel Name="TargetPanel" Spacing="5">
				<TextBlock Text="Cilj (stopinje):"/>
				<NumericUpDown Value="{Binding TargetXDeg, Mode=TwoWay}" Minimum="0"/>
			</StackPanel>

			<StackPanel Name="RepeatsPanel" Spacing="5">
				<TextBlock Text="Ponavljanja:"/>
				<NumericUpDown Value="{Binding Repeats, Mode=TwoWay}" Minimum="0"/>
			</StackPanel>

			<StackPanel Name="PausePanel" Spacing="5">
				<TextBlock Text="Pavza (ms):"/>
				<NumericUpDown Value="{Binding PauseMs, Mode=TwoWay}" Minimum="0"/>
			</StackPanel>

			<Button Content="Potrdi Spremembe" Command="{Binding SaveChangesCommand}" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
		</StackPanel>
	</Border>
</UserControl>