<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LM01_UI.Views.NumericKeypad">

	<UserControl.Styles>
		<Style Selector="Button">
			<Setter Property="FontSize" Value="36"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="5"/>
			<Setter Property="MinHeight" Value="80"/>
			<Setter Property="MinWidth" Value="80"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="Focusable" Value="False"/>
		</Style>
	</UserControl.Styles>

	<Border Background="WhiteSmoke" BorderBrush="Black" BorderThickness="1" CornerRadius="8">
		<Grid Margin="5" RowDefinitions="*,*,*,*" ColumnDefinitions="*,*,*">
			<Button Grid.Row="0" Grid.Column="0" Content="7" BorderBrush="DarkGreen" BorderThickness="3" Tag="7" Click="KeypadButton_Click"/>
			<Button Grid.Row="0" Grid.Column="1" Content="8" BorderBrush="DarkGreen" BorderThickness="3" Tag="8" Click="KeypadButton_Click"/>
			<Button Grid.Row="0" Grid.Column="2" Content="9" BorderBrush="DarkGreen" BorderThickness="3" Tag="9" Click="KeypadButton_Click"/>

			<Button Grid.Row="1" Grid.Column="0" Content="4" BorderBrush="DarkGreen" BorderThickness="3" Tag="4" Click="KeypadButton_Click"/>
			<Button Grid.Row="1" Grid.Column="1" Content="5" BorderBrush="DarkGreen" BorderThickness="3" Tag="5" Click="KeypadButton_Click"/>
			<Button Grid.Row="1" Grid.Column="2" Content="6" BorderBrush="DarkGreen" BorderThickness="3" Tag="6" Click="KeypadButton_Click"/>

			<Button Grid.Row="2" Grid.Column="0" Content="1" BorderBrush="DarkGreen" BorderThickness="3" Tag="1" Click="KeypadButton_Click"/>
			<Button Grid.Row="2" Grid.Column="1" Content="2" BorderBrush="DarkGreen" BorderThickness="3" Tag="2" Click="KeypadButton_Click"/>
			<Button Grid.Row="2" Grid.Column="2" Content="3" BorderBrush="DarkGreen" BorderThickness="3" Tag="3" Click="KeypadButton_Click"/>

			<Button Grid.Row="3" Grid.Column="0" Content="⌫" BorderBrush="DarkGreen" BorderThickness="3" Tag="BACKSPACE" Click="KeypadButton_Click"/>
			<Button Grid.Row="3" Grid.Column="1" Content="0" BorderBrush="DarkGreen" BorderThickness="3" Tag="0" Click="KeypadButton_Click"/>
			<Button Grid.Row="3" Grid.Column="2" Content="➡" BorderBrush="DarkGreen" BorderThickness="3" Tag="NEXT" Click="KeypadButton_Click"/>
		</Grid>
	</Border>
</UserControl>